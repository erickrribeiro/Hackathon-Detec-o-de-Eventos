<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/scrollView"
    android:background="#000000">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#000000"
        android:orientation="vertical"
        >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="O processo de calibração é composto de 5 etapas (OBS.: leia todas as etapas antes de iniciar):"
                android:id="@+id/textView"
                android:textColor="#FFFFFF"
                android:textAppearance="?android:attr/textAppearanceMedium"
               />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="6dp">

                <ImageView
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:id="@+id/imageView1"
                    android:src="@drawable/passo_01_cinza" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:id="@+id/textView5"
                    android:textColor="#FFFFFF"
                    android:text="Coloque o celular no seu bolso e aguarde o primeiro alerta sonoro;"
                    android:layout_marginTop="3dp"/>
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:id="@+id/imageView2"
                    android:src="@drawable/passo_02_cinza" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Após ouvir o primeiro alerta sonoro, dê o primeiro salto na vertical (um pulo normal);"
                    android:id="@+id/textView6"
                    android:textColor="#FFFFFF"
                    android:layout_marginTop="3dp" />
            </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <ImageView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:id="@+id/imageView3"
                android:src="@drawable/passo_03_cinza" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Após ouvir o segundo alerta sonoro, dê o segundo salto na vertical;"
                android:id="@+id/textView7"
                android:textColor="#FFFFFF"
                android:layout_marginTop="6dp" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <ImageView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:id="@+id/imageView4"
                android:src="@drawable/passo_04_cinza" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Após ouvir o terceiro alerta sonoro, dê o terceiro salto na vertical;"
                android:id="@+id/textView8"
                android:textColor="#FFFFFF"
                android:layout_marginTop="6dp" />
        </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <ImageView
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:id="@+id/imageView5"
                    android:src="@drawable/passo_05_cinza" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="O quarto alerta sonoro indicará que o processo de calibração foi finalizado com sucesso."
                    android:id="@+id/textView9"
                    android:textColor="#FFFFFF"
                    android:layout_marginTop="6dp" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginTop="25dp">

                <Button
                    android:layout_width="170dp"
                    android:layout_height="wrap_content"
                    android:text="@string/button_iniciar_calibracao"
                    android:id="@+id/button_iniciar_calibracao" />

                <Button
                    android:layout_width="170dp"
                    android:layout_height="wrap_content"
                    android:text="Ajuda (?)"
                    android:id="@+id/button_ajuda" />
            </LinearLayout>

    </LinearLayout>
</ScrollView>
